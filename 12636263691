
local GUI = game:GetService("CoreGui"):FindFirstChild("ROMHUBNofitication")

local ROMHUBNofitication = {}

function ROMHUBNofitication:Notify(Title, Description)
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Corner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local Description = Instance.new("TextLabel")

ScreenGui.Parent = GUI
ScreenGui.Name = "ROMHUBNotification"
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Frame.BackgroundTransparency = 0.4
Frame.BorderColor3 = Color3.fromRGB(51, 51, 51)
Frame.BorderSizePixel = 2
Frame.Position = UDim2.new(0.85,0,0.9,0)
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.Size = UDim2.new(0,255,0,76)

Corner.CornerRadius = UDim.new(0, 8) 

Corner.Parent = Frame

Title.Parent = Frame
Title.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0.1, 0, 0.2, 0)
Title.Size = UDim2.new(0, 0, 0, 0)
Title.Font = Enum.Font.GothamBold
Title.Text = Title
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextTransparency = 0
Title.TextSize = 17.000
Title.TextXAlignment = Enum.TextXAlignment.Left    
    
Description.Parent = Frame
Description.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Description.BackgroundTransparency = 1
Description.Position = UDim2.new(0.1, 0, 0.4, 0)
Description.Size = UDim2.new(0, 0, 0, 0)
Description.Font = Enum.Font.GothamBold
Description.Text = Description
Description.TextWrapped = true
Description.TextColor3 = Color3.fromRGB(255, 255, 255)
Description.TextTransparency = 0
Description.TextSize = 12.000
Description.TextXAlignment = Enum.TextXAlignment.Left    
    
 wait(3)
    game.CoreGui:FindFirstChild("ROMHUBNotification"):Destroy()

    
 end

return ROMHUBNofitication